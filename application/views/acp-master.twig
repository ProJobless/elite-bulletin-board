<script type="text/javascript">
	$(function(){
		//global loading message.
		$('#loadingBackGround').hide()  // hide it initially
		.ajaxStart(function() {
			$(this).show();
		}) //END .ajaxStart
		.ajaxStop(function() {
			$(this).hide();
		}); //END .ajaxStart
